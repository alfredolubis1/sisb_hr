<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

        <record id="make_invisible" model="res.groups">
            <field name="name">Hide Menu</field>
        </record>
        <record model="ir.ui.menu" id="hr_attendance.menu_open_view_attendance_reason">
            <field name="groups_id" eval="[(5,ref('make_invisible'))]"/>
        </record>

        <record id="group_hr_user_lvl2" model="res.groups">
            <field name="name">Officer Level 2</field>
            <field name="comment">the user will have an access to the human resources leave request to approve the final state in leave request</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('base.group_hr_user')), (4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="base.group_hr_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="comment">the user will have an access to the human resources configuration as well as statistic reports.</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <!-- <field name="implied_ids" eval="[(4, ref('base.group_hr_user')), (4, ref('pathlight_sisb.group_pathlight_admin')), (4, ref('sisb_hr_new.group_hr_user_lvl2'))]"/> -->
            <field name="implied_ids" eval="[(4, ref('sisb_hr.group_hr_user_lvl2'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>


        <record id="survey.survey_input_public_access" model="ir.rule">
            <field name="name">Public access to user_input</field>
            <field name="model_id" ref="survey.model_survey_user_input"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_public'))]"/>
            <field eval="0" name="perm_unlink"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="0" name="perm_create"/>
        </record>

        <record id="survey_input_hr_manager_access" model="ir.rule">
            <field name="name">Public access to user_input</field>
            <field name="model_id" ref="survey.model_survey_user_input"/>
            <!-- <field name="domain_force">[('create_uid', '=', user.id)]</field> -->
            <field name="groups" eval="[(4, ref('base.group_hr_manager'))]"/>
            <field eval="0" name="perm_unlink"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="0" name="perm_create"/>
        </record>

    </data>

</openerp>