<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="leave_summary_wiz_view" model="ir.ui.view">
            <field name="name">Leave Summary</field>
            <field name="model">leave.summary.wizard</field>
            <field name="type">form</field>
            <field name="priority">50</field>
            <field name="arch" type="xml">
                <form string="Leave Summary">
                    <group>
                        <group colspan="4" col="4">
                            <field name="company_id" required="1"/>
                            <newline/>
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_report" string="Print" type="object" class="oe_highlight"/>
                        <button string="Close" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_leave_summary_wiz_view" model="ir.actions.act_window">
            <field name="name">Leave Summary</field>
            <field name="res_model">leave.summary.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="leave_summary_wiz_view"/>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Leave Summary Report" action="action_leave_summary_wiz_view" id="menu_sisb_leave_summary_report" parent="menu_open_leaves_report_wizard" sequence="2"/>


        <record id="individual_leave_history_wiz_view" model="ir.ui.view">
            <field name="name">Individual Leave History</field>
            <field name="model">individual.leave.summary.wizard</field>
            <field name="type">form</field>
            <field name="priority">50</field>
            <field name="arch" type="xml">
                <form string="Individual Leave History">
                    <group>
                        <group colspan="4" col="4">
                            <field name="company_id" required="1"/>
                            <field name="employee_id" required="1" domain="[('company_id', '=', company_id)]"/>
                            <newline/>
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_report" string="Print" type="object" class="oe_highlight"/>
                        <button string="Close" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_individual_leave_history_wiz_view" model="ir.actions.act_window">
            <field name="name">Individual Leave History</field>
            <field name="res_model">individual.leave.summary.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="individual_leave_history_wiz_view"/>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Individual Leave History" action="action_individual_leave_history_wiz_view" id="menu_sisb_individual_leave_history_report" parent="menu_open_leaves_report_wizard" sequence="1"/>
    </data>
</openerp>