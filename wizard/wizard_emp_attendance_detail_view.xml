<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="employee_individual_att_detail" model="ir.ui.view">
            <field name="name">Individual Detailed Attendance Data</field>
            <field name="model">all.attendance.detail</field>
            <field name="arch" type="xml">
                <form string="Attendance Summary Report">
                    <group>
                        <group col="4" colspan="4">
                            <field name="company_id" required="1"/>
                            <field name="employee_id" string="Select Employee" attrs="{'readonly': [('company_id', '=', False)], 'required': [('company_id', '!=', False)]}"/>
                            <newline/>
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>
                        </group>
                        <footer>
                         <button name="print_attendance_detail_report" string="Print" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                        </footer>
                    </group>
                </form>
            </field>
        </record>


        <record id="sisb_individual_employee_attendance_detail" model="ir.actions.act_window">
            <field name="name">Individual Detailed Attendance Data</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">all.attendance.detail</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="employee_individual_att_detail"/>
            <field name="target">new</field>
        </record>

         <menuitem name="Individual Detailed Attendance Data" action="sisb_individual_employee_attendance_detail" id="menu_sisb_individual_att_report" parent="menu_sisb_attendance_report" sequence="5"/>
    </data>
</openerp>