<?xml version="1.0"?>
<openerp>
    <data>
        
        <record id="summary_attendance_report_result_view" model="ir.ui.view">
            <field name="name">csum.att.xls.report.view</field>
            <field name="model">sum.att.xls.report</field>
            <field name="arch" type="xml">
                <form string="Cancelled Invoice Report">
                    <group colspan="4">
                        <field name="name" invisible="1"/>    
                        <field name="file" filename="name"/>
                    </group>
                    <footer>
                        <button special="cancel" string="Cancel" colspan="2"/>
                    </footer>
                </form>
            </field>
        </record>        

        <record id="summary_attendance_report_wizard_view" model="ir.ui.view">
            <field name="name">summary.attendance.excel.report.view</field>
            <field name="model">summary.attendance.excel.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Generate Summary Attendace Excel Report">
                    <!-- <separator string="Generate Cancelled Invoice Report" colspan="4"/> -->
                    <group col="4" colspan="4">
                        <field name="company_id"/>
                        <newline/>
                        <field name="dept_ids"/>
                        <field name="holiday_status_ids" options="{'no_open': True}">
                            <tree>
                                <field name="name"/>
                                <field name="max_leaves"/>
                            </tree>
                        </field>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <!-- <group colspan="4">
                            <field name="company_id" required="1"/>
                        </group>
                        <group colspan="2">
                            <field name="date_from" required="1"/>
                        </group>
                        <group colspan="2">
                            <field name="date_to" required="1"/>
                        </group> -->
                    </group>                   
                    <footer>
                        <button name="print_report" string="Print Xls Summary Attendance" type="object"
                            class="oe_highlight"/>
                        <button string="Cancel" class="oe_highlight" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_summary_attendance_report_wizard_view" model="ir.actions.act_window">
             <field name="name">Summary Attendance Report By Dept</field>
             <field name="res_model">summary.attendance.excel.report</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">form</field>
             <field name="view_id" ref="summary_attendance_report_wizard_view"/>
             <field name="target">new</field>
        </record>
        
        <menuitem id="menu_summary_attendance_report_wizard" action="action_summary_attendance_report_wizard_view" parent="menu_sisb_attendance_report" sequence="7"/>
        
    </data>
</openerp>

