        <!-- Add Schedule Manual -->
        <record id="employee_add_schedule_form_view" model="ir.ui.view">
            <field name="name">employee.add.schedule.form.view</field>
            <field name="model">employee.add.schedule</field>
            <field name="arch" type="xml">
                <form string="Schedule">
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="employee_id" required="True" options="{'no_open': True, 'no_create': True}"/>
                        </group>
                        <group col="4" colspan="4" string="Schedule List">
