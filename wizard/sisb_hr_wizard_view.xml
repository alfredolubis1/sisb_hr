        <!-- Cancel Employee Shift -->
        <record id="wiz_cancel_shift_view" model="ir.ui.view">
            <field name="name">Cancel Shift</field>
            <field name="model">wiz.cancel.shift</field>
            <field name="arch" type="xml">
                <form string="Cancel Shift">
                    <group>
                        <group>
                            <field name="cancel_options" widget="radio"/>
                        </group>
                        <group>
                            <div attrs="{'invisible':[('cancel_options','!=','cs')]}" class="oe_grey" colspan="4">
                            Use this options to cancel this Shift, after you cancel this, the created shift will be on CANCELLED State
                            </div>
                            <div attrs="{'invisible':[('cancel_options','!=','ce')]}" class="oe_grey" colspan="4">
                            Use this options if you want to cancel shift for a certain employee from this Shift.
                            </div>
                        </group>
                    </group>
                    <group col="4" colspan="4" attrs="{'invisible': [('cancel_options', '=', 'cs')]}">
                        <field name="shift_source_id" readonly="1"/> 
                        <separator string="Select Employee" colspan="4"/>
                        <field name="employee_shift_ids" colspan="4" nolabel="1" string="Employe List">
                            <tree editable="bottom" create="false">
                                <field name="name"/>
                                <field name="employee_id"/>
                                <field name="company_id"/>
                                <field name="department_id"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="shift_id"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="cancel_shift" string="OK" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Cancel" colspan="2"/>
                    </footer>
                </form>
            </field>
        </record>
        <!-- ##################### -->


