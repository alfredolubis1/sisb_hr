        <record id="view_cancel_resign_wizard" model="ir.ui.view">
            <field name="name">Cancel Resign</field>
            <field name="model">cancel.resign.wizard</field>
            <field name="arch" type="xml">
            <form string="Cancel Resign">
                <group col="4" colspan="4">
                    <separator string="No Boarding Item to re-allocated to this Employee" colspan="4" attrs="{'invisible': [('item_exist','=',True)]}"/>
                    <field name="employee_id" readonly="1" options="{'no_create': True, 'no_open': True}"/>
