                    <field name="item_exist" invisible="True"/>
                </group>
                <separator string="Notes" colspan="4"/>
                <field name="notes" readonly="True"/>
                <!-- <label string="Bellow this delay, the error is considered to be voluntary" colspan="2"/> -->
