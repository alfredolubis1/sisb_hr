<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="employee_summary_detail_report" model="ir.ui.view">
            <field name="name">Individual Detail</field>
            <field name="model">summary.detail.report</field>
            <field name="arch" type="xml">
                <form string="Attendance Summary Report">
                    <group>
                        <group col="4" colspan="4">
                            <field name="employee_id" string="Select Employee" required="1"/>
                            <field name="academic_year_id" required="1"/>
                            <newline/>
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>
                        </group>
                        <footer>
                         <button name="print_detail_attendance_report" string="Print" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                        </footer>
                    </group>
                </form>
            </field>
        </record>


        <record id="sisb_action_attendance_summary_detail_report" model="ir.actions.act_window">
            <field name="name">Individual Detail</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">summary.detail.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="employee_summary_detail_report"/>
            <field name="target">new</field>
        </record>

         <menuitem name="Individual Late/Leave Early/Absent" action="sisb_action_attendance_summary_detail_report" id="sisb_employee_individual_detail_attendance_report" parent="menu_sisb_attendance_report" sequence="4"/>
    </data>
</openerp>