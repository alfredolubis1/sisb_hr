<?xml version="1.0" ?>
    <openerp>
        <data>
            <record id="view_employee_stage_tree" model="ir.ui.view">
                <field name="name">Boarding List View</field>
                <field name="model">hr.boarding.list</field>
                <field name="arch" type="xml">
                    <tree string="HR Boarding List">
                        <field name="sequence" widget="handle"/>
                        <field name="name"/>
                        <field name='parent_item'/>
                        <field name="department_id"/>
                        <field name="note"/>
                    </tree>
                </field>
            </record>


            <record id="view_employee_stage_form" model="ir.ui.view">
                <field name="name">Boarding Form View</field>
                <field name="model">hr.boarding.list</field>
                <field name="arch" type="xml">
                    <form string="HR Boarding List">
                        <sheet>
                            <group col="4" colspan="4">
                                <field name="name"/>
                                <field name="parent_item" domain="[('id', '!=', id)]"/>
                                <field name="responsible" required="True"/>
                                <field name="department_id" options="{'no_create': True}" attrs="{'invisible': [('responsible','=','dept_mgr')]}"/>
                                <field name="note"/>
                                <field name="sequence"/>
                                <field name="company_id" options="{'no_create': True}" invisible="True"/>
                            </group>
                        </sheet>
                    </form>
                </field>
            </record>

            <record model="ir.actions.act_window" id="hr_boarding_list_action">
                <field name="name">Boarding List Item Template</field>
                <field name="res_model">hr.boarding.list</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form</field>
                <!-- <field name="context"></field> -->
                <field name="help" type="html">
                    <p class="oe_view_nocontent_create">
                        Click here to create a new Boarding List Item or remove.
                    </p>
                
                </field>
            </record>

            <menuitem
            id="hr_boarding_list"
            parent="hr.menu_hr_configuration"
            action="hr_boarding_list_action"
            sequence="106"/>

            <record id="view_employee_item_line_form" model="ir.ui.view">
                <field name="name">hr.boarding.list.form</field>
                <field name="model">hr.boarding.list.line</field>
                <field name="arch" type="xml">
                    <form string="HR Boarding List Line">
                        <sheet>
                            <group col="4" colspan="4">
                                <field name="sequence"/>
                                <field name="name"/>
                                <field name="department_id" options="{'no_create': True}"/>
                                <field name="note"/>
                                <field name="company_id" options="{'no_create': True}" invisible="True"/>
                                <button name="send_board_email" string="SEND" type="object" class="oe_highlight"/>
                            </group>
                        </sheet>
                    </form>
                </field>
            </record>

            <record id="view_employee_item_line_tree" model="ir.ui.view">
                <field name="name">hr.boarding.list.tree</field>
                <field name="model">hr.boarding.list.line</field>
                <field name="arch" type="xml">
                    <tree string="HR Boarding List Line" editable="bottom">
                        <field name="sequence" widget="handle"/>
                        <field name="boarding_id" options="{'no_create': True}"/>
                        <field name="department_id"/>
                        <!-- <field name="amount"/> -->
                        <field name="note"/>
                        <!-- <field name="req"/> -->
                    </tree>
                </field>
            </record>
        </data>
    </openerp>
