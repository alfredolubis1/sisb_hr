        <record id="working_time_conf_action" model="ir.actions.act_window">
            <field name="name">Work Shift</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">working.time.conf</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem id="menu_hr_working_time_conf" name="Work Shift" parent="work_time_conf"
