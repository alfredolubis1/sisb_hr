<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>

        <menuitem id="work_time_conf" name="Shift" parent="hr.menu_hr_root" groups="sisb_hr.make_invisible" sequence="1000"/>



        <record id="employee_schedule_tree_view" model="ir.ui.view">
            <field name="name">employee.schedule.tree.view</field>
            <field name="model">employee.schedule</field>
            <field name="arch" type="xml">
                <tree string="Working Time">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="date_from" />
                    <field name="date_to"/>
                    <field name="schedule_type_id"/>
                    <field name="company_id"/>
                    <field name="default_timezone" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="employee_schedule_form_view" model="ir.ui.view">
            <field name="name">employee.schedule.form.view</field>
            <field name="model">employee.schedule</field>
            <field name="arch" type="xml">
                <form string="Schedule">
                    <header>
                        <button name="call_wizard" type="object" class="oe_highlight" string="Add Schedule Manual"/>
                    </header>
                    <sheet>
                        <group>
                            <group col="4" colspan="4">
                                <field name="name"/>
                                <newline/>
                                <field name="employee_id" required="True" options="{'no_open': True, 'no_create': True}"/>
                                <field name="department_id" options="{'no_open': True, 'no_create': True}"/>
                                <field name="date_from" />
                                <field name="date_to"/>
                                <field name="schedule_type_id"/>
                                <field name="company_id" options="{'no_open': True, 'no_create': True}"/>
                                <field name="default_timezone" invisible="1"/>
                            </group>
                            <group col="4" colspan="4" string="Daily Schedule List">
                                <field name="sched_detail_ids" widget="one2many_list" nolabel="1">
                                    <tree string="Daily Schedule List" editable="bottom">
                                        <field name="date"/>
                                        <field name="start_hour" widget="float_time"/>
                                        <field name="start_break_hour" widget="float_time"/>
                                        <field name="end_break_hour" widget="float_time"/>
                                        <field name="late_tolerance" widget="float_time"/>
                                        <field name="end_hour" widget="float_time"/>
                                        <field name="employee_id"/>
                                        <field name="schedule_id"/>
                                        <field name="default_timezone" invisible="1"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="employee_my_schedule_action" model="ir.actions.act_window">
            <field name="name">My Schedule</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.schedule</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('employee_id.user_id.id','=',uid)]</field>
        </record>
        <record id="employee_my_schedule_action_tree" model="ir.actions.act_window.view">
            <field eval="10" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="employee_schedule_tree_view"/>
            <field name="act_window_id" ref="employee_my_schedule_action"/>
        </record>
        <record id="employee_my_schedule_action_form" model="ir.actions.act_window.view">
            <field eval="20" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="employee_schedule_form_view"/>
            <field name="act_window_id" ref="employee_my_schedule_action"/>
        </record>
        <menuitem id="menu_hr_employee_my_schedule" action="employee_my_schedule_action" parent="work_time_conf"
                  sequence="1" groups="base.group_user,base.group_hr_user,base.group_hr_manager"/>


        <record id="all_employee_schedule_action" model="ir.actions.act_window">
            <field name="name">All Schedule</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.schedule</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain"></field>
        </record>
        <record id="all_employee_schedule_action_tree" model="ir.actions.act_window.view">
            <field eval="10" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="employee_schedule_tree_view"/>
            <field name="act_window_id" ref="all_employee_schedule_action"/>
        </record>
        <record id="all_employee_schedule_action_form" model="ir.actions.act_window.view">
            <field eval="20" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="employee_schedule_form_view"/>
            <field name="act_window_id" ref="all_employee_schedule_action"/>
        </record>
        <menuitem id="menu_hr_all_employee_schedule" action="all_employee_schedule_action" parent="work_time_conf"
                  sequence="2" groups="base.group_hr_manager"/>
        


        <record id="working_time_conf_tree_view" model="ir.ui.view">
