<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <record id="sisb_view_account_fiscalyear_form" model="ir.ui.view">
            <field name="name">sisb.account.fiscalyear.form</field>
            <field name="model">sisb.account.fiscalyear</field>
            <field name="arch" type="xml">
                <form string="Year">
                <header>
                    <button name="create_period"  string="Create Monthly Periods" type="object" class="oe_highlight"/>
                    <button name="create_period3"  string="Create 3 Months Periods" type="object" class="oe_highlight"/>
<!--                    <field name="state" widget="statusbar" nolabel="1" />-->
                </header>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
<!--                            <field name="company_id" groups="base.group_multi_company"/>-->
<!--                            <field name="end_journal_period_id"/>-->
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_stop"/>
                        </group>
                    </group>
                    <field colspan="4" name="period_ids" nolabel="1" widget="one2many_list">
                        <form string="Period">
                            <group col="4">
                                <field name="name"/>
                                <field name="code"/>
                                <field name="date_start"/>
                                <field name="date_stop"/>
                              
                            </group>
                        </form>
                    </field>
                </form>
            </field>
        </record>
        <record id="sisb_view_account_fiscalyear_tree" model="ir.ui.view">
            <field name="name">sisb.account.fiscalyear.tree</field>
            <field name="model">sisb.account.fiscalyear</field>
            <field name="arch" type="xml">
                <tree string="Year">
                    <field name="code"/>
                    <field name="name"/>
                   
                </tree>
            </field>
        </record>
        <record id="sisb_view_account_fiscalyear_search" model="ir.ui.view">
            <field name="name">sisb.account.fiscalyear.search</field>
            <field name="model">sisb.account.fiscalyear</field>
            <field name="arch" type="xml">
                <search string="Search Year">
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]" string="Fiscal Year"/>
                </search>
            </field>
        </record>
        <record id="sisb_action_account_fiscalyear" model="ir.actions.act_window">
            <field name="name">Periods</field>
            <field name="res_model">sisb.account.fiscalyear</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to start a new Periods.
              </p><p>
               
              </p>
            </field>
        </record>
        <menuitem id="sisb_next_id_23" name="Periods" parent="hr.menu_hr_configuration" sequence="37" />
        <menuitem id="sisb_menu_action_account_fiscalyear" action="sisb_action_account_fiscalyear" parent="sisb_next_id_23"/>

        <!-- Period -->
        <record id="sisb_view_account_period_form" model="ir.ui.view">
            <field name="name">sisb.account.period.form</field>
            <field name="model">sisb.account.period</field>
            <field name="arch" type="xml">
                <form string="Account Period">
                    <header>

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="fiscalyear_id" widget="selection"/>
                                <label for="date_start" string="Duration"/>
                                <div>
                                    <field name="date_start" class="oe_inline" nolabel="1"/> -
                                    <field name="date_stop" nolabel="1" class="oe_inline"/>
                                </div>
                            </group>
                            <group>
                                <field name="code"/>
                               
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="sisb_view_account_period_tree" model="ir.ui.view">
            <field name="name">sisb.account.period.tree</field>
            <field name="model">sisb.account.period</field>
            <field name="arch" type="xml">
              <tree string="Period">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="date_start"/>
                    <field name="date_stop"/>
                  
                </tree>
            </field>
        </record>
        <record id="sisb_view_account_period_search" model="ir.ui.view">
            <field name="name">sisb.account.period.search</field>
            <field name="model">sisb.account.period</field>
            <field name="arch" type="xml">
                <search string="Search Period">
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]" string="Period"/>
                   
                </search>
            </field>
        </record>
        <record id="sisb_action_account_period" model="ir.actions.act_window">
            <field name="name">Periods</field>
            <field name="res_model">sisb.account.period</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a fiscal period.
              </p><p>
                An accounting period typically is a month or a quarter. It
                usually corresponds to the periods of the tax declaration.
              </p>
            </field>
        </record>
<!--        <menuitem id="ik_menu_action_account_period" action="ik_action_account_period" parent="ik_next_id_23"/>-->

    </data>
</openerp>