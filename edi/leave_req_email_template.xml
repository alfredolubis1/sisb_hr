        <record id="first_request_leave_to_spv" model="email.template">
			<field name="name">Leave Request</field>
			<field name="model_id" ref="sisb_hr.model_hr_holidays"/>
			<field name="email_from">${(smtp_user or '')|safe}</field>
			<field name="email_to" >${(object.employee_id.supervisor_id.work_email or '')|safe}</field>
			<field name="subject">Leave request from ${object.employee_id.name}</field>
			<field name="body_html"><![CDATA[
			% set url = object.get_url(object.employee_id, object)
			<p>Hello</p>
			<p>The Leave request for ${object.employee_id.name} is waiting for your confirmation.</p>
			<p>Thank you for your participation!</p>
			<p>Click <a href="${url}" style="color:blue;font-weight:bold;">here</a> to see the Leave Request!</p>
