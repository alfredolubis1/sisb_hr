<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="academic_week_form_view" model="ir.ui.view">
            <field name="name">Academic Week Form View</field>
            <field name="model">academic.week</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="name" placeholder="Name"/>
                            <field name="code" placeholder="Code"/>
                            <field name="date_start" placeholder="Start Date"/>
                            <field name="date_end" placeholder="End Date"/>
                            <field name="year_id" colspan="4"/>
                            <separator colspan="4" string="Description"/>
                            <field name="description" colspan="4" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="academic_week_search_view" model="ir.ui.view">
            <field name="name">Academic Week Search View</field>
            <field name="model">academic.week</field>
            <field name="arch" type="xml">
                <search string="Search Academic Week">
                    <group expand="0" string="Group By">
                    	<filter name="academic_group" string="Academic Year" context="{'group_by':'year_id'}"/>
                    </group>
               </search>
            </field>
        </record>


        <record id="academic_week_tree_view" model="ir.ui.view">
            <field name="name">Academic Week Tree View</field>
            <field name="model">academic.week</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="year_id"/>
                </tree>
            </field>
        </record>

        <record id="academic_week_action_window" model="ir.actions.act_window">
            <field name="name">Academic Week</field>
            <field name="res_model">academic.week</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_academic_group': 1}</field>
            <field name="search_view_id" ref="academic_week_search_view"/>
            <field name="help" type="html">
                <p>
                    Click to create Academic Week
                </p>
            </field>
        </record>

        <menuitem id="academic_week_menu" name="Week" parent="school.menu_academic_year_form" action="academic_week_action_window" sequence="100"/>


        <!-- Inherit Academic Year View to add academic Week -->
        <record id="inherit_academic_year_form_view" model="ir.ui.view">
            <field name="name">inherit.academic.year.form.view</field>
            <field name="model">academic.year</field>
            <field name="inherit_id" ref="school.view_academic_year_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[@string='Months']" position="after">
                    <page string="Weeks">
                        <button name="generate_academic_weeks" string="Generate Academic Weeks" type="object" class="oe_highlight"/>
                        <field name="week_ids">
                            <tree>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                            </tree>
                            <form string="Weeks">
                                <group col="4" colspan="4">
                                    <field name="name" placeholder="Name"/>
                                    <field name="code" placeholder="Code"/>
                                    <field name="date_start" placeholder="Start Date"/>
                                    <field name="date_end" placeholder="End Date"/>
                                    <field name="description" colspan="4"/>
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>