<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="inherit_view_attendance_form" model="ir.ui.view">
            <field name="name">hr.attendance.form</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref ="hr_attendance.view_attendance_form"/>
            <field name="arch" type="xml">
                <form string="Employee attendances" position="replace">
                    <form string="Employee attendances">
                        <sheet>
                            <group string="Attendance Info" col="4" colspan="4">
                                <field name="employee_id" readonly="1" on_change="on_change_employee(employee_id)" options="{'no_create': True, 'no_open': True}"/>
                                <field name="shift_id" readonly="1" options="{'no_create': True, 'no_open': True}"/>
                                <newline/>
                                <field name="name" readonly="1"/>
                                <field name="sign_out" readonly="1"/>
                                <field name="late_duration" widget="float2_time" readonly="1"/>
                                <field name="leave_early_duration" widget="float2_time" readonly="1"/>
                                <field name="action" invisible="True"/>
                                <field name="worked_hours" widget="float_time"/>
                                <field name="compensated_days" invisible="True"/>
                                <field name="overtime" invisible="True"/>
                                <field name="action_desc" invisible="True"/>
                                <field name="attendance_options" invisible="True"/>
                            </group>
                            <group string="Late or Leave Early Reason" col="4" colspan="4">
                                <group col="2" colspan="2">
                                    <field name="late_action_desc_id" readonly="1" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="other_reason_late" readonly="1" attrs="{'invisible': [('get_reason_late', '=', False)]}" string="Describe"/>
                                </group>
                                <group col="2" colspan="2">
                                    <field name="leave_early_action_desc_id" readonly="1" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="other_reason_leave_early" readonly="1" attrs="{'invisible': [('get_reason_leave_early', '=', False)]}" string="Describe"/>
                                </group>
                                <group col="2" colspan="2">
                                    <field name="get_reason_late" invisible="1"/>
                                    <field name="get_reason_leave_early" invisible="1"/>
                                </group>
                            </group>
                            <separator string="Overtime Information" colspan="4" attrs="{'invisible': [('overtime','=',False)]}"/>
                            <field name="overtime_ids" attrs="{'invisible': [('overtime','=',False)]}" colspan="4" nolabel="1" readonly="1">
                                <tree string="Overtime Detail">
                                    <field name="name"/>
                                    <field name="start_ot" widget="float_time" type="char"/>
                                    <field name="end_ot" widget="float_time" type="char"/>
                                    <field name="ot_time_in" widget="float_time" type="char"/>
                                    <field name="ot_time_out" widget="float_time" type="char"/>
                                    <field name="rate_one" widget="float_time" type="char"/>
                                    <field name="rate_one_half" widget="float_time" type="char"/>
                                    <field name="rate_double" widget="float_time" type="char"/>
                                    <field name="rate_triple" widget="float_time" type="char"/>
                                    <field name="overtime_rate" invisible="1"/>
                                    <field name="ot_type_id" options="{'no_create': True,'no_open': True}"/>
                                </tree>
                            </field>
                        </sheet>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread" />
                        </div>
                    </form>
                </form>
            </field>
        </record>

        <record id="hr_attendance_hr_views" model="ir.ui.view">
            <field name="name">All Attendances</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="sisb_hr.inherit_view_attendance_form"/>
            <field name="groups_id" eval="[(6,0,[ref('base.group_hr_user')])]"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='employee_id']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
                <xpath expr="//field[@name='sign_out']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
                <xpath expr="//field[@name='late_duration']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
                <xpath expr="//field[@name='leave_early_duration']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
                <xpath expr="//field[@name='compensated_days']" position="attributes">
                    <attribute name="invisible">0</attribute>
                    <attribute name="readonly">0</attribute>
                </xpath>
                <xpath expr="//field[@name='action']" position="attributes">
                    <attribute name="readonly">0</attribute>
                    <attribute name="invisible">0</attribute>
                </xpath>
                <xpath expr="//field[@name='late_action_desc_id']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
                <xpath expr="//field[@name='leave_early_action_desc_id']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
                <xpath expr="//field[@name='other_reason_late']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
                <xpath expr="//field[@name='other_reason_leave_early']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
                <xpath expr="//field[@name='overtime_ids']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
                <xpath expr="//field[@name='overtime']" position="attributes">
                    <attribute name="readonly">0</attribute>
                    <attribute name="invisible">0</attribute>
                </xpath>
            </field>
        </record>

