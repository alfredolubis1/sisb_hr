                        <field name="sign_out" invisible="True"/>
                        <field name="action" invisible="True"/>
                        <!-- <field name="reason" required="True"/> -->
                        <!-- <field name="status" invisible="True"/> -->
                        
                    </group>
                    <group col="4" colspan="4">
                        <field name="leave_early_duration" widget="float2_time" readonly="1" string="Leave Early Duration"/>
                    </group>
                    <footer>
                        <button name="attendance_save"  type="object" string="Save"  class="oe_highlight"/>
                        or
                        <button name="attendance_cancel" string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
