        <!-- This Form Called When Employee Late to Sign In -->
        <record id="sisb_view_attendance_create_form" model="ir.ui.view">
            <field name="name">sisb.attendance.employee.form</field>
            <field name="model">hr.attendance</field>
            <field eval="18" name="priority"/>
            <field name="arch" type="xml">
                <form string="Employee attendances">
                    <group>
                        <group col="4" colspan="4">
                            <field name="late_action_desc_id" required="1" colspan="4" on_change="onchange_late_action_desc(late_action_desc_id)" string="Late Reason" options="{'no_open': True, 'no_create': True}"/>
                            <field name="other_reason_late" string="Describe" colspan="4" attrs="{'invisible': [('get_reason_late', '=', False)], 'required': [('get_reason_late', '=', True)]}"/>
                        </group>
                        <group col="4" colspan="4">
                            <field name="late_duration" widget="float2_time" readonly="1" string="Late Duration"/>
                            <field name="get_reason_late" invisible="1"/>
                            <field name="employee_id" invisible="True" on_change="on_change_employee(employee_id)"/>
                            <field name="name" invisible="True"/>
                            <field name="sign_out" invisible="True"/>
                            <field name="action" invisible="True"/>
                            <field name="shift_id" invisible="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="attendance_save" type="object" string="Save" class="oe_highlight"/>
                        or
                        <button name="attendance_cancel" string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="sisb_action_attend_edit_form" model="ir.actions.act_window">
