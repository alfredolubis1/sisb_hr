        <template id="sisb_probation_completion_report">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="header">
                        <t t-call="sisb_hr.sisb_hr_report_layout"/>
                        <div class="col-xs-12" style="margin-top: 3mm; text-align:center;">
                            <h2 style="font-size:22px; font-weight:bold;">Probation Completion Letter</h2>
                        </div>
                    </div>
                    <div class="page" style="font-family: 'Times New Roman';border-collapse: collapse;">
                        <div class="col-xs-12" style="font-size:12px;">
