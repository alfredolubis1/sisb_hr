        <template id="generate_on_board_item">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="header">
                        <t t-call="sisb_hr.sisb_hr_report_layout"/>
                        <div class="col-xs-12" style="margin-top: 3mm; text-align:center;">
                            <h2 style="font-size:22px; font-weight:bold;">Staff Onboarding Checklist</h2>
                        </div>
                    </div>
                    <div class="page" style="font-family: 'Times New Roman';border-collapse: collapse;">
                        <style type="text/css">
                            .intro_table {
                                width: 100%;
                                table-layout: fixed;    
                                font-size: 14px;
                            }
                            
                            .intro_table td {
                                padding-top: 10px;
                                padding-bottom: 10px;
                            }

                            .main_table {
                                width: 100%;
                                border: 1px solid black;
                                
                            }

                            .main_table th {
                                border: 1px solid black;
                                padding: 7px;
                                font-size: 11px;
                                text-align: center;
                            }

                            .main_body td {
                                border: 1px solid black;
                                padding: 5px;
                                font-size: 10px;
                                text-align: center;
                            }

                            .last_table {
                                width: 100%;
                                color: grey;
                                font-size: 14px;
                                text-align: left;
                            }

                            .last_table td {
                                padding: 25px;
                            }
                        </style>
                        <br/>
                        <table class="intro_table">
                            <tr>
                                <td>Name</td>
                                <td style="text-align: left;">: <span t-field="o.name"/></td>
                                <td>Campus/Corporate</td>
                                <td style="text-align: left;">: <span t-field="o.company_id.name"/></td>
                            </tr>
                            <tr>
                                <td>Position</td>
                                <td style="text-align:left;">: <span t-field="o.employee_position_id.name"/></td>
                                <td>First day of employment</td>
                                <td style="text-align: left;">: <span t-field="o.join_date"/></td>
                            </tr>
                            <tr>
                                <td>Staff ID</td>
                                <td style="text-align: left;">: <span t-field="o.employee_no"/></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </table>
                        <br/>
                        <table class="main_table">
                            <thead>
                                <tr>
                                    <th>Item</th>
                                    <th>Department</th>
                                    <th>Note</th>
                                    <th>Requested</th>
                                    <th>Request Date</th>
                                    <th>Received</th>
                                    <th>Received Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.boarding_list_ids" t-as="item" class="main_body">
                                    <td style="text-align: left;"><span t-esc="item.boarding_id.name"/></td>
                                    <!-- <td><span t-esc="item.department_id.name"/></td> -->
                                    <td>
                                        <t t-if="not item.department_id">
                                            <p>Department Manager</p>
                                            <!-- <span t-esc="item.department_id.name"/> -->
                                        </t>
                                        <t t-else="">
                                            <span t-esc="item.department_id.name"/>
                                        </t>
                                    </td>
                                    <td><span t-esc="item.note"/></td>
                                    <td>
                                        <t t-if="item.req == True">
                                            <input type="checkbox" checked="checked"/>
                                        </t>
                                        <t t-if="item.req == False">
                                            <input type="checkbox"/>
                                        </t>
                                    </td>
                                    <td><span t-esc="item.req_date"/></td>
                                    <td >
                                        <t t-if="item.is_received == True">
                                            <input type="checkbox" checked="checked"/>
                                        </t>
                                        <t t-if="item.is_received == False">
                                            <input type="checkbox"/>
                                        </t>
                                    </td>
                                    <td><span t-esc="item.date_is_received"/></td>
                                </tr>
                            </tbody>
                        </table>
                        <br/>
                        <table class="last_table">
                            <tr>
                                <td>Additional Comments</td>
                            </tr>
                            <tr>
                                <td style="border-bottom: 3px dotted grey;"></td>
                            </tr>
                            <tr>
                                <td style="border-bottom: 3px dotted grey;"></td>
                            </tr>
                            <tr>
                                <td style="border-bottom: 3px dotted grey;"></td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </template>

        
        <!-- Reference Letter -->
        <template id="generate_reference_letter">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="header">
                        <t t-call="sisb_hr.sisb_hr_report_layout"/>
                        <div class="col-xs-12" style="margin-top: 3mm; text-align:center;">
                            <h2 style="font-size:22px; font-weight:bold;">Employment Reference Letter</h2>
